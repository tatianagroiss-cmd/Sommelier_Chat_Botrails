<div class="container my-5">
  <h1 class="text-center mb-4">Our Wine Collection</h1>

  <div class="row">
    <% @wines.each do |wine| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body d-flex flex-column">
            <p class="text-muted small mb-1"><%= wine.category %></p>

            <h5 class="card-title fw-bold mb-2"><%= wine.name %></h5>

            <p class="card-subtitle text-secondary mb-2">
              <i class="bi bi-globe"></i> <%= wine.country %>
            </p>

            <p class="card-text flex-grow-1">
              <%= truncate(wine.description, length: 100) %>
            </p>

            <div class="d-flex justify-content-between align-items-center mt-auto">
              <span class="badge bg-light text-dark"><%= wine.volume %></span>
              <span class="fw-bold fs-6 text-success">
                <%= number_to_currency(wine.price, unit: "â‚¬") %>
              </span>
            </div>

            <div class="mt-3">
              <%= link_to "View Details", wine_path(wine), class: "btn btn-outline-dark w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
