<div class="d-flex justify-content-center align-items-start vh-100 bg-dark pt-1">
  <div class="floating-card p-5 mx-auto"
              style="max-width: 1100px; width: 100%;
              border: 1px solid rgba(255,255,255,0.15);
              background: rgba(0,0,0,0.75);
              border-radius: 20px;">


    <h1 class="display-5 mb-3 heading-gold">Wine Collection</h1>

  <table class="table table-hover table-dark align-middle">
    <thead class="table-dark">
    </thead>

    <tbody>
      <% @wines.each_with_index do |wine, index| %>
        <tr>
          <td class="fw-semibold"><%= wine.name %></td>
          <td><%= wine.category %></td>
          <td><%= wine.country %></td>
          <td>â‚¬ <%= number_with_precision(wine.price, precision: 2) %></td>
          <td class="text-end">
            <%= link_to "Details", wine_path(wine), class: "btn btn-gold btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
