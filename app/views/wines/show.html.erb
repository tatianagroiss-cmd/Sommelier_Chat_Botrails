  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">

        <h2 class="fw-bold mb-4 text-center border-bottom pb-2">
          <%= @wine.name %>
        </h2>

        <dl class="row mb-4">
          <dt class="col-sm-4 text-muted">Category</dt>
          <dd class="col-sm-8"><%= @wine.category %></dd>

          <dt class="col-sm-4 text-muted">Country</dt>
          <dd class="col-sm-8"><%= @wine.country %></dd>

          <dt class="col-sm-4 text-muted">Volume</dt>
          <dd class="col-sm-8"><%= @wine.volume.presence || "0.75 l" %></dd>

          <dt class="col-sm-4 text-muted">Price</dt>
          <dd class="col-sm-8">€ <%= number_with_precision(@wine.price, precision: 2) %></dd>
        </dl>

        <p class="lead">
          <%= @wine.description.presence || "No description available yet." %>
        </p>

        <div class="mt-4 d-flex justify-content-between">
          <%= link_to "← Back to Wine List", wines_path, class: "btn btn-outline-secondary" %>
          <%= link_to "Add to Order", new_order_item_path(wine_id: @wine.id), class: "btn btn-primary" %>
        </div>

      </div>
    </div>
  </div>
