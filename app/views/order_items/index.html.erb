<div class="container mt-5">
  <h2 class="text-center mb-4">Your Order</h2>


 <div class="table-responsive">
    <table class="table table-hover table-bordered align-middle shadow-sm">
      <thead class="table-dark text-center">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Quantity</th>
        <th scope="col">Price (€)</th>
        <th scope="col">     </th>
      </tr>
    </thead>

    <tbody  class="text-center">
      <% @order_items.each do |item| %>
        <tr>
          <td><%= item.menu_item&.name || item.wine&.name || item.beverage&.name %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.total, unit: "€") %></td>
          <td>
            <%= button_to "Delete", order_item_path(item),
            method: :delete,
            form: { data: { turbo: false } },
            data: { confirm: "Really???" },
            class: "btn btn-outline-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="d-flex justify-content-between mt-4">
    <%= link_to "Back to Menu", menu_items_path, class: "btn btn-outline-secondary" %>
    <%= link_to "Back to Wine List", wines_path, class: "btn btn-outline-secondary" %>
    <%= link_to "Back to Drinks", beverages_path, class: "btn btn-outline-secondary" %>
    <h4><strong>Total:</strong> <%= number_to_currency(@total_price, unit: "€") %></h4>
  </div>
</div>
