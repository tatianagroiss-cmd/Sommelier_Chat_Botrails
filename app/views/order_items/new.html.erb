<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10">
      <div class="card shadow-lg border-0">
        <div class="card-body p-4">
          <h3 class="text-center mb-4 fw-bold">Add to Your Order</h3>

          <%= simple_form_for @order_item do |f| %>
            <div class="mb-3">
              <%= f.association :wine, label: "Choose Wine", input_html: { class: "form-select" } %>
            </div>

            <div class="mb-3">
              <%= f.association :menu_item, label: "Choose Dish (optional)", input_html: { class: "form-select" } %>
            </div>

            <div class="mb-3">
              <%= f.association :beverage, label: "Choose Beverage (optional)", input_html: { class: "form-select" } %>
            </div>

            <div class="mb-3">
              <%= f.input :quantity, label: "Quantity", input_html: { class: "form-control", min: 1, value: 1 } %>
            </div>

            <div class="d-grid">
              <%= f.button :submit, "Add to Order", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= link_to "Back to Menu", wines_path, class: "text-decoration-none text-muted" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
