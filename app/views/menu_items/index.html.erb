<div class="container my-3">
  <h1 class="display-5 mb-3"
        style="background: linear-gradient(90deg, #f5f5dc, #daa520, #8b4513);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 15px rgba(218,165,32,0.4);">
        Menu
  </h1>

  <table class="table table-hover table-dark align-middle">
    <thead class="table-light">
    </thead>

    <tbody>
      <% @menu_items.each_with_index do |menu_item, index| %>
        <tr>
          <td class="fw-semibold"><%= menu_item.name %></td>
          <td>€ <%= number_with_precision(menu_item.price, precision: 2) %></td>
          <td class="text-end">
            <%= link_to "Details", menu_item_path(menu_item), class: "btn btn-gold btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<footer>
  © <%= Time.now.year %> Private Sommelier. All rights reserved.
</footer>
