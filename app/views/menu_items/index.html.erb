<div class="container my-5">
  <h1 class="text-center mb-4">Our Menu</h1>

  <div class="row">
    <% @menu_items.each do |item| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body d-flex flex-column">

            <h5 class="card-title fw-bold mb-2"><%= item.name %></h5>

            <p class="card-text flex-grow-1"><%= truncate(item.description, length: 100) %></p>

            <div class="d-flex justify-content-between align-items-center mt-auto">
                <%= number_to_currency(item.price, unit: "â‚¬") %>
              </span>
            </div>

            <div class="mt-3">
              <%= link_to "View Details", menu_item_path(item), class: "btn btn-outline-dark w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
