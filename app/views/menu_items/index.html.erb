<div class="container my-5">
  <h1 class="text-center mb-4">Our Menu</h1>

  <table class="table table-hover align-middle">
    <thead class="table-light">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Price (€)</th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @menu_items.each_with_index do |menu_item, index| %>
        <tr>
          <td class="fw-semibold"><%= menu_item.name %></td>
          <td>€ <%= number_with_precision(menu_item.price, precision: 2) %></td>
          <td class="text-end">
            <%= link_to "Details", menu_item_path(menu_item), class: "btn btn-outline-primary btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
