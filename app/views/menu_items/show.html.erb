<div class="d-flex justify-content-center align-items-start vh-100 bg-dark pt-1">
  <div class="floating-card p-5 mx-auto"
              style="max-width: 800px; width: 100%;
              border: 1px solid rgba(255,255,255,0.15);
              background: rgba(0,0,0,0.75);
              border-radius: 20px;">

    <div class="row g-4 align-items-center">

      <!-- LEFT SIDE: TEXT -->
      <div class="col-md-8">

        <div class="card-body">
          <h2 class="fw-bold mb-3 text-center text-uppercase heading-gold">
          <%= @menu_item.name %>
          </h2>
          <p class="lead">
          <%= @menu_item.description.presence || "No description available." %>
          </p>
          <p class="fs-5 fw-semibold mb-3">â‚¬ <%= @menu_item.price %></p>
        </div>

      </div>

      <!-- RIGHT SIDE: IMAGE -->
        <div class="col-md-4 text-center">
          <% if @menu_item.image_name.present? %>
            <%= image_tag asset_path(@menu_item.image_name),
                class: "img-fluid rounded-3 float-end ms-3 shadow",
                style: "max-width: 220px; height: auto;",
                alt: @menu_item.name %>
          <% else %>
            <p class="text-muted">No image available</p>
          <% end %>
        </div>

      <!-- BUTTONS -->
      <div class="mt-4 d-flex justify-content-between">
          <%= link_to "Back to Menu", menu_items_path, class: "btn btn-gold" %>
          <%= button_to "Add to Order",
            order_items_path(order_item: { menu_item_id: @menu_item.id, quantity: 1 }),
            method: :post,
            class: "btn btn-gold" %>
      </div>



    </div>
  </div>
</div>
