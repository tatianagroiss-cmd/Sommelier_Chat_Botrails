<div class="container mt-5">
  <h1 class="text-center mb-4 fw-bold border-bottom pb-2">Beverages Menu</h1>

  <table class="table table-hover align-middle">
    <thead class="table-light">
      <tr>
        <th>Name</th>

        <th>Volume</th>
        <th>Price (â‚¬)</th>
        <th class="text-end">Order</th>
      </tr>
    </thead>

    <tbody>
      <% @beverages.each do |beverage| %>
        <tr>
          <td><%= beverage.name %></td>

          <td><%= beverage.volume %></td>
          <td><%= number_with_precision(beverage.price, precision: 0) %></td>
          <td class="text-end">
            <%= form_with url: order_items_path, method: :post, local: true, class: "d-inline-flex align-items-center" do |f| %>
              <%= f.hidden_field :beverage_id, value: beverage.id %>
              <%= f.number_field :quantity, value: 1, min: 1, class: "form-control form-control-sm me-2", style: "width: 70px;" %>
              <%= link_to "Add to Order", new_order_item_path(beverage_id: beverage.id), class: "btn btn-outline-primary btn-sm" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
