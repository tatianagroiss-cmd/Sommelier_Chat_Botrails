<div class="container my-5">
  <h1 class="text-center mb-4">Beverages & Spirits</h1>

  <div class="row">
    <% @beverages.each do |beverage| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm border-0">
          <div class="card-body d-flex flex-column">

            <p class="text-muted small mb-1"><%= beverage.category %></p>

            <h5 class="card-title fw-bold mb-2"><%= beverage.name %></h5>

            <p class="card-text flex-grow-1"><%= truncate(beverage.description, length: 100) %></p>

            <div class="d-flex justify-content-between align-items-center mt-auto">
              <span class="badge bg-light text-dark"><%= beverage.volume %></span>
              <span class="fw-bold fs-6 text-success">
                <%= number_to_currency(beverage.price, unit: "â‚¬") %>
              </span>
            </div>

            <div class="mt-3">
              <%= link_to "View Details", beverage_path(beverage), class: "btn btn-outline-dark w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
